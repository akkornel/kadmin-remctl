#!/usr/bin/make -f
# Based on sample debian/rules that uses debhelper. 
# GNU copyright 1997 by Joey Hess.

# Uncomment this to turn on verbose mode. 
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

# Installation directories.
KADMIN	= $(CURDIR)/debian/kadmin-remctl

# Tell Autoconf the correct system types.
DEB_HOST_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
ifeq ($(DEB_BUILD_GNU_TYPE),$(DEB_HOST_GNU_TYPE))
    SYSTEM = --build $(DEB_HOST_GNU_TYPE)
else
    SYSTEM = --build $(DEB_BUILD_GNU_TYPE) --host $(DEB_HOST_GNU_TYPE)
endif

CFLAGS = -g -Wall -DPASSWD_FILE=\"/afs/ir/service/etc/passwd.all\" \
	-DHOST=\"password-change.stanford.edu\"
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
    CFLAGS += -O0
else
    CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	CFLAGS="$(CFLAGS)" ./configure --prefix=/usr \
	    --mandir=\$${prefix}/share/man --enable-reduced-depends \
	    $(SYSTEM)
	touch configure-stamp

build: build-arch build-indep
build-arch: build-stamp
build-indep: build-stamp
build-stamp: configure-stamp
	dh_testdir
	$(MAKE)
	chmod 755 debian/password-reset.run
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f configure-stamp build-stamp
	[ ! -f Makefile ] || $(MAKE) distclean
	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp
	dh_install -a -i --fail-missing
	install -d $(KADMIN)/etc/remctl/conf.d
	install -m 644 remctl/kadmin $(KADMIN)/etc/remctl/conf.d/kadmin
	install -d $(KADMIN)/etc/remctl/reset
	install -m 644 remctl/password $(KADMIN)/etc/remctl/reset/remctl.conf
	install -d $(KADMIN)/service/password-reset
	install -m 755 debian/password-reset.run \
	    $(KADMIN)/service/password-reset/run
	install -d $(KADMIN)/usr/share/lintian/overrides
	install -m 0644 debian/kadmin-remctl.lintian \
	    $(KADMIN)/usr/share/lintian/overrides/kadmin-remctl

binary: binary-arch binary-indep

binary-indep: DH_OPTIONS=-i
binary-indep: install
	dh_testdir
	dh_testroot
	dh_installchangelogs NEWS
	dh_installdocs README docs/design
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch: DH_OPTIONS=-a
binary-arch: install
	dh_testdir
	dh_testroot
	dh_installchangelogs NEWS
	dh_installdocs README docs/design
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

.PHONY: binary binary-arch binary-indep build build-arch build-indep
.PHONY: install
